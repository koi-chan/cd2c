<%= form_for(@original_table) do |f| %>
  <div class="form-group">
    <% if name_changeable %>
      <%= f.label(:name) %>
      <%= f.text_field(:name, class: 'form-control', required: true) %>
    <% else %>
      <label><%= t('activerecord.attributes.original_table.name') %></label>
      <p><%= @original_table.name %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label(:public) %>
    <%= f.check_box(:public, class: 'form-control') %>
    <p class="help-block">他の利用者にも使用可能にするにはチェックを入れてください。</p>
  </div>

  <div class="form-group">
    <%= f.label(:definition) %>
    <%= f.text_area(:definition, class: 'form-control', rows: 10, required: true) %>
    <p class="help-block">1行に表の1項目を書いてください。</p>
  </div>

  <div class="form-group">
    <%= f.submit(class: 'btn btn-success') %>
  </div>
<% end %>
