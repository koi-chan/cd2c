<%= form_for(@original_table) do |f| %>
  <div class="form-group">
    <% if name_changeable %>
      <%= f.label(:name) %>
      <%= f.text_field(:name, required: true) %>
    <% else %>
      <label><%= t('activerecord.attributes.original_table.name') %></label>
      <p><%= @original_table.name %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label(:definition) %>
    <%= f.text_area(:definition, required: true) %>
  </div>

  <div class="form-group">
    <%= f.submit(t('views.save')) %>
  </div>
<% end %>
